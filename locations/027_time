If month = 4 and pogodaday ! day:
set pogodaday = day
set temper = RAND (2,20)
set osadki = RAND (0,10)
	 if osadki < painweather:
	     if hour >= 7 and hour <= 20:
         set $osadki = 'It_Is_Clear.'
         end
         if hour < 7 or hour > 20:
         set $osadki = 'It_Is_Clear.'
         end
	 end
	 if osadki >= painweather:
	 set $osadki = 'the rain.'
	 end

set $pogoda = 'On the street the snow melts, temperature <<temper>> degrees Celsius. <<$osadki>>'
end

