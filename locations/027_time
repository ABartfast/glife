# time
If month = 1 and pogodaday ! day:
set pogodaday = day
set temper = RAND (-30,8)
     if temper <= 0: 
     set osadki = RAND (0,10)
		 if osadki < painweather:
		 set $osadki = 'It_Is_Clear.'
		 end
		 if osadki >= painweather:
		 set $osadki = 'Is fluffy snow.'
		 end
     end
     if temper > 0: 
     set osadki = RAND (0,10)
		 if osadki < painweather:
		 set $osadki = 'It_Is_Clear, snow begins to melt something where forming slush.'
		 end
		 if osadki >= painweather:
		 set $osadki = 'Falling sleet, who immediately melts forming slush.'
		 end
     end
set $pogoda = 'On the street there is snow, temperature <<temper>> degrees Celsius. <<$osadki>>'
end

