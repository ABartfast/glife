# rinwork
if $ARGS[0] = 'start':
	$answerrin = {
		if tipred = pokti:
			if pokvnirand = 0:
				pokpay = rand(1000, 1200)
			elseif pokvnirand = 1:
				pokpay = rand(1200, 1500)
