					'Buyer puts thing into place and leaves'

					act 'Trading on':gt 'rinwork', 'start'
				end
			elseif prodpay > pokpay + 100:
				'Buyer puts thing into place and leaves'

				act 'Trading on':gt 'rinwork', 'start'
			end
		end
