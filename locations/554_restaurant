if bankfond > 0:'personal account <<bankfond>> RUB'
     act 'GO_OUT':
     cla
     set minut = minut + 5
     gt'restaurant','start'
     end
     
     
     if bankfond >= 0:
         act 'Put money into a personal account':
		 cla
		 set minut = minut + 5
		 kartaIN = input ("How much money you want to deposit?")
		     if kartaIN <= 0 or kartaIN > money:
		     'Incorrect operation.'
		     else
		     set bankfond = bankfond + kartaIN
		     set money = money - kartaIN
		     'You put into the account <<kartaIN>> rubles, now in your account <<bankfond>> rubles.'
		     end
		     
		 act 'move_away':gt'restaurant','1'
		 end
		 
		 act 'Withdraw money from the personal account':
		 cla
		 set minut = minut + 5
		 kartaOUT = input ("How much money you want to withdraw?")
		     if kartaOUT <= 0 or kartaOUT > bankfond:
		     'Not correct operation.'
		     else
		     set bankfond = bankfond - kartaOUT
		     set money = money + kartaOUT
		     'You have removed from the account <<kartaOUT>> rubles, now in your account <<bankfond>> rubles.'
		     end
		     
		 act 'move_away':gt'restaurant','1'
		 end
     
     end
     


