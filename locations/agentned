# agentned
gs 'stat'
'<center><b><font color="maroon">Real Estate Agency</font></b></center>'
!!'<center><img src="images/pic/bank.jpg" ></center>'

act 'Leave':gt 'down'

if StoryLine > 0 and housr = 0:
	'You can buy an apartment in a residential of 2 million. Renting an apartment costs 200 rubles per day, minimum rental is for a period of 30 days.'

	if money >= 2000000:
		act 'Buy an apartment (2,000,000 rubles)':
			cls
			money -= 2000000
			housr = 1
			BuyHous = 1
			gs 'stat'
			'You bought an apartment in the residential area.'

			act 'Leave':gt 'down'
		end
	end
end

if BuyHous ! 1:
	if money >= 6000:
		act 'Rent an apartment in residental district (6,000 rubles)':
			cls
			money -= 6000
			housr = 1
			BuyHous = 2
			ArendHouseSL += 30
			gs 'stat'
			'You rented a flat in a residential area. Now you <<ArendHouseSL>> rental days.'

			act 'Leave':gt 'down'
		end
	end
end

if ArendHouseSL > 0:'Your residential house has <<ArendHouseSL>> rental days left.'

--- agentned ---------------------------------
