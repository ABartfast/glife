		mannaV -= 10
		tumanV += 10
		'<b><font color="red"><<$nameV>> produces a fog on the battlefield.</font></b>'
		xgt 'fight', 'sta'
		exit
	end

	deystrand = rand(0, 1)

	if deystrand = 0:
		xgt 'atak', 'enemy'
	elseif deystrand = 1:
		knifeV = rand(1, 3)
		'<b><font color="red"><<$nameV>> have a throws <<knifeV>> the blades</font></b>'
		xgt 'atak', 'enemy'
	end
end

