!Transoms Bank`s cards
IF turn = 3:
 CLA
 '<right><img src="casino/cartbde.jpg" ></right>'
 'The dealer gets the card:'
 '...' 
 suit = RAND (1,4)
 number = RAND (1,13) 
 $d_card[2] = $number[number] + $suit[suit]
 d_points = d_points + points[number]  
 IF p_points = 22: p_points = 21   
 wait 500
 IF d_points => 17:
  'Maps of the Bank:'
  '  <<$d_card[1]>>'
  '  <<$d_card[2]>>'
  'Points dealer: <<d_points>>'
  '__________________________'
  'Player Points: <<p_points>>'
  '__________________________'  
  IF d_points > p_points:
   'casino won'
   ACT '...':
    turn = 0
    GT 'igrkart1'
   END   
  END
  IF d_points = p_points:
   'draw'
   ACT 'pick rate':
    set money = money + deal
    turn = 0
    GT 'igrkart1'
   END      
  END
  IF d_points < p_points:
   'player won'
   prise = deal*2   
   ACT 'take the win <<prise>> RUB.':
    set money = money + prise
    turn = 0
    GT 'igrkart1'
   END      
  END  
 END
 IF d_points < 17:
  suit = RAND (1,4)
  number = RAND (1,13) 
  $d_card[3] = $number[number] + $suit[suit]
  d_points = d_points + points[number]    
  IF d_points <= 21:
   'Maps dealer:'
   '  <<$d_card[1]>>'
   '  <<$d_card[2]>>'
   '  <<$d_card[3]>>'
   'Points dealer: <<d_points>>'   
   '__________________________'
   'Player Points: <<p_points>>'
   '__________________________'  
   IF d_points > p_points:
    'casino won'
    ACT '...':
     turn = 0
     GT 'igrkart1'  
    END   
   END
   IF d_points = p_points:
    'draw'
    ACT 'pick rate':
     set money = money + deal
     turn = 0
     GT 'igrkart1'
    END      
   END
   IF d_points < p_points:
    'player won'
    prise = deal*2   
    ACT 'take the win <<prise>> RUB.':
     set money = money + prise
     turn = 0
     GT 'igrkart1'
    END      
   END     
  END
  IF d_points > 21:
   'Maps dealer:'
   '  <<$d_card[1]>>'
   '  <<$d_card[2]>>'
   '  <<$d_card[3]>>'
   '__________________________'
   'busting!!!'
   '__________________________'
   'player won'
   prise = deal*2   
   ACT 'take the win <<prise>> RUB.':
    set money = money + prise
    turn = 0
    GT 'igrkart1'
   END      
  END    
 END
