		cla
		gs 'clothing', 'wear_last_worn'
		InSleep = 0
		minut += 15
		tanga = 1
		gt 'bed', 'fin'
	end

	act 'Get out of bed':
		cla
		InSleep = 0
		gt 'bed', 'fin'
	end

	act 'Try to sleep':gt 'bed2', 'dosip'
