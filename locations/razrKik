# razrKik
if razradKik = 0:
	if amatReit >= 5:
		set razradKik = 1
		set amatReit = 0
		set kikmoney = 200
		'You have assigned the third rank amateur kickboxing.'
	end
end

if razradKik = 1:
	if amatReit >= 10:
		set razradKik = 2
		set amatReit = 0
		set kikmoney = 500
		'You have assigned the 2nd rank amateur kickboxing.'
	end
end

if razradKik = 2:
	if amatReit >= 15:
		set razradKik = 3
		set amatReit = 0
		set kikmoney = 1500
		'You assigned 1st rank amateur kickboxing.'
	end
end

if razradKik = 3:
	if amatReit >= 20:
		set razradKik = 4
		set amatReit = 0
		set kikmoney = 3500
		'You awarded the title of Candidate Master of Sports in kickboxing.'
	end
end

if razradKik = 4:
	if amatReit >= 25:
		set razradKik = 5
		set amatReit = 0
		set kikmoney = 7500
		'You awarded the title of Master of Sports in kickboxing.'
	end
end

--- razrKik ---------------------------------
