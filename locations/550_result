			cla
			act 'you won <<2*st_1>>':
				set money=money+2*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
				gt 'amrul'
			end
		end
	end
end
if du!0:
	if du=1:
		du=0
		if x_rul>0 and x_rul<13:
			cla
			act 'you won <<3*st_1>>':
				set money=money+3*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
				gt 'amrul'
			end
		end
	end
	if du=2:
		du=0
		if x_rul>12 and x_rul<25:
			cla
			act 'you won <<3*st_1>>':
				set money=money+3*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
				gt 'amrul'
			end
		end
	end
