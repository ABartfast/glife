		du=0
		if x_rul>24 and x_rul<37:
			cla
			act 'you won <<3*st_1>>':
				set money=money+3*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
				gt 'amrul'
			end
		end
	end
end
if series!0:
	if series=1:
		series=0
		if x_rul=1 or x_rul=4 or x_rul=7 or x_rul=10 or x_rul=13 or x_rul=16 or x_rul=19 or x_rul=22 or x_rul=25 or x_rul=28 or x_rul=31 or x_rul=34:
