			cla
			act 'you won <<2*st_1>>':
				set money=money+2*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
				gt 'amrul'
			end
		end
	end
end
if mb!0:
	if mb=1:
		mb=0
		if x_rul>0 and x_rul<19:
			cla
			act 'you won <<2*st_1>>':
				set money=money+2*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
				gt 'amrul'
			end
		end	
	end
	if mb=2:
