	if series=2:
		series=0
		if x_rul=2 or x_rul=3 or x_rul=8 or x_rul=11 or x_rul=14 or x_rul=17 or x_rul=20 or x_rul=23 or x_rul=26 or x_rul=29 or x_rul=32 or x_rul=35:
			cla
			act 'you won <<3*st_1>>':
				set money=money+3*st_1
				gt 'amrul'
			end
		else
			cla
			act 'you lost':
