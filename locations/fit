# fit
if $ARGS[0] = 'start':
	cla
	*clr
	set minut += 5
	'<center><b><font color="maroon">Fitness Center</font></b></center>'
	'<center><img src="images/etogame/fit.jpg"></center>'
	'Subscribe to the 30 classes worth 3,000 ruble'
