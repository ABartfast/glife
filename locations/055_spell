if $ARGS[0]='hand':
cla
!Creating fog
'Striking hand increases the damage in 10 just one attack. cost 100 manna.'
     act 'Striking hand (100 manna)':
     cla
     *clr
     set manna = manna - 100
     set strenK = stren*20/100
     set magweapbonus = RAND (stren*10 - strenK,stren*10 + strenK)
     '<B><font color=green>You put the manna in the hand to apply the devastating blows.</font></B>'
     xgt'atak','player'
     end

act 'physical attacks':gt'boxing'
     if magik > 0:
     act 'magic attack':gt'magik'
     end
end

