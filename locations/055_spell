if $ARGS[0]='wind5':
cla
!Creating fog
'devouring vacuum, sucks shield enemy destroying it whatever strength he was not. cost 500 manna.'
     if defenceV > 0:
		 act 'devouring vacuum (500 manna)':
		 cla
		 *clr
		 set manna = manna - 500
		 set defenceV = 0
		 set defenceMV = 0
		 set defenceWV = 0
		 set defenceActParV = 0
		 set defenceActParMV = 0
		 set defenceActV = 0
		 set defenceActMV = 0
		 set defAtkMV = 0
		 '<B><font color=green>You have created around themselves the vacuum that sucked in the defense of the enemy to destroy it.</font></B>'
		 xgt'fight','sta'
		 end
     end
     if defenceV <= 0:
     'The enemy is no shield that can destroy this spell.'
     end

act 'physical attacks':gt'boxing'
     if magik > 0:
     act 'magic attack':gt'magik'
     end
end

