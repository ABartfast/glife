act 'Get_Away':minut+=3&gt'vokzalG'

if vokzalVork>=1:
     if cleZalDay!day:
     	 act 'Wash the floor in the waiting room':
		 cls
		 cleZalDay=day
		 minut+=60
		 sweat+=1
		 if vital<15:vital+=RAND(0,1)
		 if stren<15:stren+=RAND(0,1)
		 gs'stat'
		 '<center><img src="pic/clener1.jpg" ></center>'
		 'You took inventory, poured water into a bucket and began to wash the floor in the waiting room.'
		 act 'Get_Away':minut+=1&gt'vokzalGin'
		 end
     end
     if cleMTDay!day:
         act 'Wash the floor in the men`s room':
		 cls
		 cleMTDay=day
		 minut+=30
		 sweat+=1
		 if vital<15:vital+=RAND(0,1)
		 if stren<15:stren+=RAND(0,1)
		 gs'stat'
		 '<center><img src="pic/clener1.jpg" ></center>'
		 'You took inventory, poured water into a bucket and went to the men`s room.'
