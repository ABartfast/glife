     xgt'fight','sta'
     exit
     end
     if klonV < 1 and mannaV > 15:
     set mannaV = mannaV - 15
     set klonV = klonV + 1
     '<B><font color=green>LOST</font></B>'
     xgt'fight','sta'
     exit
     end
set deystrand = RAND (0,1)
     if deystrand = 0:
     xgt'atak','enemy'
     end
     if deystrand = 1:
     set knifeV = RAND (1,3)
     '<B><font color=red><<$nameV>> methane to you <<knifeV>> knives</font></B>'
     xgt'atak','enemy'
     end
end

if $ARGS[0]='fighter5':
cla
!program directly attack
     if tuman = 0 and tumanV < 5 and mannaV > 10:
     set mannaV = mannaV - 10
     set tumanV = tumanV + 10
     '<B><font color=red><<$nameV>> produces fog on the battlefield.</font></B>'
     xgt'fight','sta'
     exit
     end
     if klonV < 1 and mannaV > 15:
     set mannaV = mannaV - 15
     set klonV = klonV + 1
     '<B><font color=green>LOST</font></B>'
     xgt'fight','sta'
     exit
     end
     if stun < 1 and manna > 20:
     set stunnerV = 1
     set mannaV = mannaV - 20
     '<B><font color=red><<$nameV>> attacks you Gouge.</font></B>'
     xgt'atak','enemy'
     end
set deystrand = RAND (0,1)
     if deystrand = 0:
     xgt'atak','enemy'
     end
     if deystrand = 1:
     set knifeV = RAND (1,3)
     '<B><font color=red><<$nameV>> methane to you <<knifeV>> knives</font></B>'
     xgt'atak','enemy'
