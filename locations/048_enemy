# enemy
!Calculation of the enemy`s attack

if $ARGS[0]='start':
cla
!in this block is selected on the basis of the variable program enemy attacks
     if program = 0:
     !Action Programme simple attacker fizuhoy
     xgt'enemy','fighter'
     end
     if program = 1:
     !Action Programme fizuha and knives
     xgt'enemy','fighter2'
     end
     if program = 2:
     !Action Programme fizuha, knives, it_mists
     xgt'enemy','fighter3'
     end
     if program = 3:
     !Action Programme fizuha, knives, it_mists, clones
     xgt'enemy','fighter4'
     end
     if program = 4:
     !Action Programme fizuha, knives, it_mists, clones, paralysis
     xgt'enemy','fighter5'
     end
     if program = 5:
     !Action Programme Kisame
     xgt'enemy','kisame'
     end
     if program = 6:
     !Action Programme Toby
     xgt'enemy','tobi'
     end
     if program = 7:
     !Action Programme Toby
     xgt'enemy','gedomazo'
     end
     if program = 8:
     !program of action firearms
     xgt'enemy','gun'
     end
     if program = 9:
     !Action Programme Sasori
     xgt'enemy','sasori'
     end
     if program = 10:
     !Action Programme Conan
     xgt'enemy','konan'
     end
     if program = 11:
     !Action Programme Hidan
     xgt'enemy','hidan'
     end

end

if $ARGS[0]='hidan':
cla
     if zerkaloV > 0:set barierV = 0
     if zerkaloV <= 0:set barierV = 5500
if healthV < vitalV*10 + strenV*5:set healthV = vitalV*10 + strenV*5
     if zerkaloV > 0:
	 set healthV = vitalV*10 + strenV*5
	 set mannaV = intelV*magikV + magikV*100 + vitalV*10
	 set willpowerV = willV*10
	 set health = health - 400
	 set manna = manna - 500
     '<B><font color=red><<$nameV>> shouts "RITUAL BEGINS!" and stands in a circle inscribed in blood on the ground.</font></B>'
     '<B><font color=red>He impales himself and you feel, pain pierces the body.</font></B>'
     xgt'fight','sta'
     exit     
     end
     if zerkaloV <= 0 and defence > 0:
	 set damTipV = 5000
	 set bonusShV = 100
	 set hidanAtk = 1
     '<B><font color=red><<$nameV>> shouts "Your existence offends my God DZHASHINA!" and throws you into a plait trehlezviynuyu driving it by a line.</font></B>'
     if klon > 0:set klon = klon/2&'<B><font color=red><<$nameV>> shouts "crud! I like a pig slaughter YOU!"</font></B>'
     xgt'atakA1','atak'
     exit     
     end
     if zerkaloV <= 0 and defence <= 0:
	 set damTipV = 300
	 set bonusShV = 100
	 set hidanAtk = 1
     '<B><font color=red><<$nameV>> shouts "You will die a blasphemer!" and throws you into a plait trehlezviynuyu driving it by a line.</font></B>'
     if klon > 0:set klon = 0&'<B><font color=red>Your clones turned into steam from the blow spit. <<$nameV>> shouts "I IMMORTAL Ravager! And YOU SHIT!"</font></B>'
     if tuman > 0:set tuman = 0&'<B><font color=red><<$nameV>> shouts "You`re pathetic in their vain attempts spryatatsya FROM ME!"</font></B>'
     xgt'atakA1','atak'
     exit     
     end
end

if $ARGS[0]='konan':
cla
     if round < 6:
     set mannaV = mannaV - 10
	 set damTipV = 500
     '<B><font color=red><<$nameV>> fold marks in his hands and you are flying sheets of paper.</font></B>'
     if klon > 0:set klon = 0&'<B><font color=red>Your clones turned into steam from the impact of paper.</font></B>'
     xgt'atakA1','atak'
     exit
     end
     if round >= 6:
		 if unmaterialV > 5 and defence > 0:
		 set mannaV = mannaV - 250
		 set damTipV = 15000
		 set bonusShV = 100
         '<B><font color=red><<$nameV>> takes to the air on the white wings and breaking out of its wings paper falls on you in a flood of flying with terrible speed paper swords.</font></B>'
		 if klon > 0:set klon = 0&'<B><font color=red>Your clones turned into steam from the impact of paper.</font></B>'
		 xgt'atakA1','atak'
		 exit
		 end
		 if unmaterialV > 5 and defence <= 0:
		 set mannaV = mannaV - 20
		 set damTipV = 450
         '<B><font color=red><<$nameV>> creates paper boomerangs that fly in your direction.</font></B>'
         xgt'atakA1','atak'
		 exit
		 end
		 if defenceV <= 0 and unmaterialV <= 5:
		 set mannaV = mannaV - 250
		 set defenceV = defenceV + 3000
		 set defenceMV = defenceMV + 3000
		 set defenceWV = defenceWV + 3000
		 '<B><font color=red>Conan shoots up on its paper wings like an angel. Around it starts spinning paper making her protection.</font></B>'
		 xgt'fight','sta'
		 exit
		 end
		 if unmaterialV <= 2 and konanD < 3:
		 set mannaV = mannaV - 150
		 set konanD = konanD + 1
		 '<B><font color=red>Conan stops meditating in the air.</font></B>'
		 xgt'fight','sta'
		 exit
		 end
		 if konanD >= 3:
		 set mannaV = mannaV - 250
		 set konanD = 0
		 set unmaterialV = 20
		 '<B><font color=red>Conan crumbles in the air for thousands of sheets of paper.</font></B>'
		 xgt'fight','sta'
		 exit
		 end
     end
end

if $ARGS[0]='sasori':
cla
if SasoriBody > 1:set damTipV = 1000
if SasoriBody = 1:set damTipV = 2000
set poisonAV = 1
set defenceV = defenceV + 10
set defenceMV = defenceMV + 20
set defenceWV = defenceWV + 50
set mannaV = mannaV - 10
	 if SasoriBody = 1 and defence > 0:
	 set defSasori = defence*20/100
	 set defence = defence - defSasori
	 '<B><font color=red>Rain falls on top of the steel needles greatly weakening your defense.</font></B>'
	 end 
'<B><font color=red><<$nameV>> shooting at you by a cloud of poisonous spines.</font></B>'
if klon > 0:set klon = 0&'<B><font color=red>Your clones turned into steam from the blow needle.</font></B>'
xgt'atakA1','atak'
end

if $ARGS[0]='gedomazo':
cla
     if klon <= 0 and tuman <= 0:
	 set magweapbonusV = 5000
	 '<B><font color=red><<$nameV>> with a furious roar of effort on you for its huge stone fist.</font></B>'
	 xgt'atak','enemy'
	 exit
	 end
	 if klon > 0 or tuman > 0:
	 set klon = 0
	 set tuman = 0
	 set mannaV = mannaV - 500
	 '<B><font color=red><<$nameV>> publishes a terrible roar and shock wave sweeps the air over the battlefield.</font></B>'
	 xgt'fight','sta'
	 exit
	 end

end

if $ARGS[0]='tobi':
cla
!program attacks Toby
     if unmaterialV <= 0 and IzanagiV = 0 and GedoMazo = 0:
     *clr
     '<B><font color=red><<$nameV>> put his fingers to his lips and said quietly "KUCHIE SAINT BUT JITSU".</font></B>'
     '<B><font color=red>You will see Huge stone statue of a demon and throw at you to attack.</font></B>'
     set GedoMazo = 1
     set $nameV = 'Gedo Mazo'
	 !stats
	 set strenV = 1000
	 set speedV = 100
	 set agilV = 90
	 set reactV = 100
	 set vitalV = 5000
	 set intelV = 50
	 set willV = 50
	 !skills
	 set magikV = 1
	 set boxingV = 100
	 set shootV = 100
	 !parameters
	 set healthV = vitalV*10 + strenV*5
	 set mannaV = intelV*magikV + magikV*100 + vitalV*10
	 set willpowerV = willV*10
	 set BonusAtakV = 0
	 set BonusDefV = 0
	 !Programme of Action
	 set barierV = 1500
	 set program = 7
	 xgt'fight','start'
     exit
     end
     
     if unmaterialV <= 2 and IzanagiV = 0 and GedoMazo > 0 and TobiStena = 0:
     set mannaV = mannaV - 500
     set TobiStena = 1
     set defenceV = defenceV + 25000
     '<B><font color=red><<$nameV>> Arcanum and makes his skin blackens solidifying his body and creating protection 25000 units.</font></B>'
     set barierV = 2000
     xgt'fight','sta'
     exit
     end
     
     if unmaterialV <= 2 and IzanagiV = 0 and GedoMazo > 0 and TobiStena = 1:
     set mannaV = mannaV + 6000
     set TobiStena = 2
     '<B><font color=red><<$nameV>> Arcanum and makes you feel like its magical energy increases sharply.</font></B>'
     xgt'fight','sta'
     exit
     end
     
     
     if stun > 0:
     set magweapbonusV = 2000
     '<B><font color=red><<$nameV>> said triumphantly, "NOW you`re dead".</font></B>'
	 '<B><font color=red>He grabs you by the throat and raises his hand in the air.</font></B>'
	 '<B><font color=red>His fingers like steel and they squeeze your throat with terrible force.</font></B>'
	 xgt'atak','enemy'
	 exit
     end
     
     if defence >= 5000:
     set defence = 0
     set defenceM = 0
     set defenceActPar = 0
     set defenceActParM = 0
     set defenceAct = 0
     set defenceActM = 0
     set defAtk = 0
     set mannaV = mannaV - 100
     set stunV = 1
     '<B><font color=red><<$nameV>> close your eyes and you see, of him as a tear ran down a drop of blood.</font></B>'
     '<B><font color=red>He opened his eyes became completely red with black veins and said Amaterasu</font></B>'
     '<B><font color=red>In your face rushed black devouring flame instantly destroy your protection.</font></B>'
     xgt'fight','sta'
     exit
     end
     if tuman > 0:
     set tumanV = tumanV + tuman
     set tuman = 0
     '<B><font color=red><<$nameV>> adds magic signs hands and your fog comes under his control came to make you an overview.</font></B>'
	 '<B><font color=red>He attacks you.</font></B>'
	 xgt'atak','enemy'
	 exit
     end
     if unmaterialV > 0 and klon <= 0:
	 set stunnerV = 1
	 set mannaV = mannaV - 20
	 set magweapbonusV = 800
	 '<B><font color=red><<$nameV>> attacks you gathered manna in the hand.</font></B>'
	 xgt'atak','enemy'
	 exit
     end
     if unmaterialV > 0 and klon > 0:
     set klon = 0
     set stunV = 1
	 '<B><font color=red><<$nameV>> adds signs hands and all your clones just turns into steam.</font></B>'
	 xgt'atak','enemy'
	 exit
     end
     if unmaterialV <= 0 and tobizanagi < 2:
     set mannaV = mannaV - 250
     set tobizanagi = tobizanagi + 1
     !set unmaterialV = 10
     '<B><font color=red><<$nameV>> adds signs with his hands.</font></B>'
     xgt'fight','sta'
     exit
     end
     if unmaterialV <= 0 and tobizanagi = 2:
     set mannaV = mannaV - 250
     set tobizanagi = 0
     set unmaterialV = 20
     set stunV = 1
     '<B><font color=red><<$nameV>> adds signs with his hands around his eyes and twisted vortex.</font></B>'
     xgt'fight','sta'
     exit
     end

end

if $ARGS[0]='kisame':
cla
!program attack Kisame
     if defenceV <= 0 and kisamePro = 0:
     set kisamePro = 1
     set mannaV = mannaV - 150
     set defenceV = defenceV + 1500
     set defenceMV = defenceMV + 1500
     set defenceWV = defenceWV + 1500
     set defenceActParV = 500
     set defenceActParMV = 500
     set defenceActV = 10
     set defenceActMV = 10
     '<B><font color=red><<$nameV>> fold marks around his hands and formed a water sphere of protecting it from damage.</font></B>'
     xgt'fight','sta'
     exit
     end
     if defenceV <= 1000 and kisamePro > 0:
     set mannaV = mannaV - 500
     set defenceV = defenceV + 5000
     set defenceMV = defenceMV + 5000
     set defenceWV = defenceWV + 5000
     set defenceActParV = 500
     set defenceActParMV = 500
     set defenceActV = 10
     set defenceActMV = 10
     set defAtkMV = 10
     '<B><font color=red><<$nameV>> adds signs hands and the area around the water starts pogruzhatsya.</font></B>'
     if klon > 0:set klon = 0&'<B><font color=red>Your clones turned into steam from the impact of water.</font></B>'
     xgt'fight','sta'
     exit
     end
     if defenceV > 1000:
     set kisameRAND = RAND (0,3)
         if kisameRAND = 0:
         set klonV = klonV + 3
         '<B><font color=red><<$nameV>> adds signs with his hands.</font></B>'
         xgt'fight','sta'
         exit
         end 
         if kisameRAND > 0:
         set mannaV = mannaV - 250
		 set damTipV = 1500
		 set damTipMV = 2500
		 set bonusShV = 50
         '<B><font color=red><<$nameV>> fold marks in his hands and you are flying out of the water by a shark.</font></B>'
         if klon > 0:set klon = 0&'<B><font color=red>Your clones turned into steam from the impact of water.</font></B>'
         xgt'atakA1','atak'
         exit
         end
     end
     '<B><font color=red><<$nameV>> attacks.</font></B>'
     xgt'enemy','fighter'
end

if $ARGS[0]='gun':
cla
!program directly attack
!gs'atak'
set damTipV = 1500
'<B><font color=red><<$nameV>> shooting at you.</font></B>'
xgt'atakA1','atak'
end

if $ARGS[0]='fighter':
cla
!program directly attack
!gs'atak'
xgt'atak','enemy'
end

if $ARGS[0]='fighter2':
cla
!program directly attack
set deystrand = RAND (0,1)
     if deystrand = 0:
     xgt'atak','enemy'
     end
     if deystrand = 1:
     set knifeV = RAND (1,3)
     '<B><font color=red><<$nameV>> methane to you <<knifeV>> knives</font></B>'
     xgt'atak','enemy'
     end
end

if $ARGS[0]='fighter3':
cla
!program directly attack
     if tuman = 0 and tumanV < 5 and mannaV > 10:
     set mannaV = mannaV - 10
     set tumanV = tumanV + 10
     '<B><font color=red><<$nameV>> produces fog on the battlefield.</font></B>'
     xgt'fight','sta'
     exit
     end
set deystrand = RAND (0,1)
     if deystrand = 0:
     xgt'atak','enemy'
     end
     if deystrand = 1:
     set knifeV = RAND (1,3)
     '<B><font color=red><<$nameV>> methane to you <<knifeV>> knives</font></B>'
     xgt'atak','enemy'
     end
end

