# elevator
act 'Back':gt 'hotel'

act 'Go to your room':
	msg 'Sorry, but the elevator is not working'
	gt 'elevator'
	!!if nomer = 0
	!! msg 'You have not paid room at this inn'
	!! gt 'elevator'
	!!end
	!!if nomer = 1
	!! gt 'number1'
	!!end
	!!if nomer = 2
	!! gt 'number2'
	!!end
	!!if nomer = 3
	!! gt 'number3'
	!!end
	!!if nomer = 4
	!! gt 'number4'
	!!end
end

